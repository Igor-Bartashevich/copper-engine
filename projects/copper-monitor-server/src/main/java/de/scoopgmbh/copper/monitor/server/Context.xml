<?xml version="1.0" encoding="UTF-8"?>
 
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
 
    <bean name="serverLogin" class="de.scoopgmbh.copper.monitor.server.ServerLoginImpl"/>
 
    <bean name="/serverLogin" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="serverLogin"/>
        <property name="serviceInterface" value="de.scoopgmbh.copper.monitor.adapter.ServerLogin"/>
    </bean>
 
</beans>