<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
                http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- This default handler takes care of each of the services enumerated below -->
	<bean id="defaultHandlerMapping" class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping" />

	<!-- SpringHTTP Service Exposure -->
    <bean id="copperMonitoringService" factory-bean="parentWorkaround" factory-method="createSpringBeanWorkaround" scope="prototype"/>

 	<bean id="secureRemoteInvocationExecutor" factory-bean="parentWorkaround" factory-method="createSecureRemoteInvocationExecutor" scope="prototype"/>

	<bean id="loginService" factory-bean="parentWorkaround" factory-method="createLoginService" scope="prototype"/>
	
	<bean name="/copperMonitoringService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter" scope="prototype">
		<property name="service" ref="copperMonitoringService" />
		<property name="serviceInterface" value="de.scoopgmbh.copper.monitoring.core.CopperMonitoringService" />
		<property name="remoteInvocationExecutor" ref="secureRemoteInvocationExecutor"/><!-- Bean programmatic injected from server -->
	</bean>
	
	<bean name="/loginService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter" scope="prototype">
		<property name="service" ref="loginService" />
		<property name="serviceInterface" value="de.scoopgmbh.copper.monitoring.core.LoginService" />
	</bean>


</beans>